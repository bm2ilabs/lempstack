CHOICE=1

printf "%s===================%s\n" "${GREEN}" "${NC}"
printf "%s   VPS security    %s\n" "${GREEN}" "${NC}"
printf "%s===================%s\n" "${GREEN}" "${NC}"

while [ "${CHOICE}" != "0" ]
do
    printf "%s1. Install Clamav%s\n" "${GREEN}" "${NC}"
    printf "%s2. Scan Malware%s\n" "${GREEN}" "${NC}"
    #printf "%s3. Cau hinh Naxsi Firewall%s\n" "${GREEN}" "${NC}"
#    printf "%s4. Kiem tra ddos%s\n" "${GREEN}" "${NC}"
    printf "%s ==================%s\n" "${GREEN}" "${NC}"
    read -r -p " Enter your selection [0 = Exit] " CHOICE
    if [ -z "${CHOICE}" ]
    then
        CHOICE=1
        continue
    fi
    case ${CHOICE} in
        1) clear; inst_clamav;;
        2) clear; scan_malware;;
        #3) clear; printf "%sSe update sau%s\n" "${RED}" "${NC}"; menu_security;;
        0) clear; menu_vps;;
        *) clear; printf "%s\n" "${RED}Your choice is not correct. Please choose again.${NC}";;
    esac
done