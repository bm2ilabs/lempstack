# shellcheck disable=SC1091
source /var/hostvn/menu/helpers/function

input(){
    while true
    do
        echo "Username does not contain special characters and must be 5 characters in length."
        read -r -p "Nhap vao user muon xoa [0 = Exit]: " ftp_user
        echo
        if validate_user "${ftp_user}" || [ "${ftp_user}" == "0" ]; then
            break
        else
            clear
            printf "%s\n" "${RED}User khong dung dinh dang, vui long nhap lai.${NC}"
        fi
    done
}

_delete(){
    pure-pw userdel "${ftp_user}"
    pure-pw mkdb
    systemctl restart pure-ftpd
}

_run(){
    if [[ -f "/etc/pure-ftpd/pureftpd.passwd" ]]; then
        if ! if_pureftpd_user_exists "${ftp_user}"; then
            ALERT=$(printf "%s\n" "${RED}FTP User does not exist.${NC}")
        fi

        if [[ -z "${ALERT}" ]]; then
            _delete
            clear
            printf "%s\n" "${GREEN}Xoa FTP User success.${NC}"
        else
            clear
            printf "%s\n" "${ALERT}"
        fi
    else
        clear
        printf "%s\n" "${RED}Khong co user FTP nao ton tai tren VPS.${NC}"
    fi
}

ALERT=""
ftp_user=""
pureftpd_status="$(pgrep -f pure-ftpd)"

if [ -z "${pureftpd_status}" ]; then
    clear
    printf "%s\n" "${RED}PURE-FTP khong hoat dong hoac chua duoc cai dat. Vui long kiem tra lai.${NC}"
else
    input
    if [ "${ftp_user}" == "0" ]; then
        clear
        printf "%s\n" "${RED}Ban da Cancel hanh dong.${NC}"
    else
        _run
    fi
fi

menu_ftp