# shellcheck disable=SC1091
source /var/hostvn/menu/helpers/function

list_domain(){
    #https://www.cyberciti.biz/faq/linux-unix-shell-check-if-directory-empty/
    if [[ $(ls -A "${USER_DIR}") ]]; then
        clear
        echo "Domain list on VPS:"
        echo
        i=1
        cd_dir "${USER_DIR}"
        for entry in .*.conf; do
            [[ -e "${entry}" ]] || break
            domain=${entry/.}
            domain=${domain//.conf}
            printf "%s) %s\n" "${i}" "${GREEN}${domain}${NC}"
            i=$((i+1));
        done
        echo "----------------------------------"
        echo "Total Domain: $((i-1))"
    else
        clear
        printf "%s\n" "${RED}There is no domain at all on the system.${NC}"
    fi
}

list_domain
echo ""
menu_domain