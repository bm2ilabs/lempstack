# shellcheck disable=SC1091
source /var/hostvn/menu/helpers/function

printf "%s\n" "${GREEN}======================${NC}"
printf "%s\n" "${GREEN}Permission Chown/Chmod${NC}"
printf "%s\n" "${GREEN}======================${NC}"

#https://www.cyberciti.biz/faq/linux-unix-shell-check-if-directory-empty/
if [ "$(ls -A "${USER_DIR}")" ]; then
    clear
    echo "Permission for domain:"
    sleep 1
    cd_dir "/var/hostvn/users"
    for entry in .*.conf; do
        domain=${entry/.}
        domain=${domain//.conf}
        #https://www.howtoforge.com/tutorial/linux-grep-command/
        #https://stackoverflow.com/a/6284370
        username=$(grep -w "username" "${USER_DIR}/.${domain}.conf" | cut -f2 -d'=');
        chmod 711 /home
        chmod 711 /home/"${username}"
        chmod 711 /home/"${username}"/"${domain}"
        chmod 711 /home/"${username}"/"${domain}"/logs
        chmod 755 /home/"${username}"/"${domain}"/public_html
        find /home/"${username}"/"${domain}"/public_html/ -type d -print0 | xargs -I {} -0 chmod 0755 {}
        find /home/"${username}"/"${domain}"/public_html/ -type f -print0 | xargs -I {} -0 chmod 0644 {}
        chown -R "${username}":"${username}" /home/"${username}"
    done
    printf "%s\n" "${GREEN}Setting permission is complete.${NC}"
else
    clear
    printf "%s\n" "${RED}No Domain exists on the system.${NC}"
    menu_permission
fi

# shellcheck disable=SC2034
CHOICE=0
menu_permission