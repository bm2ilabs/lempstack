# shellcheck disable=SC2154
# shellcheck disable=SC1091
source /var/hostvn/menu/helpers/function

confirm_destroy(){
    while true
    do
        read -r -p "Ban muon xoa backup ? (y/n) " promt_destroy
        echo
        if [[ "${promt_destroy}" =~ ^([yY])$ || "${promt_destroy}" =~ ^([nN])$ ]]; then
            break
        else
            printf "%s\n"  "${RED}Value is not correct. Please re-enter.${NC}"
        fi
    done
}

_run(){
    promt_destroy=""
    remote=""
    confirm_destroy
    if [[ "${promt_destroy}" =~ ^([yY])$ ]]; then
        select_remote
        if [ -z "${remote}" ]; then
            clear
            printf "%s\n" "${RED}Ban da Cancel hanh dong.${NC}"
        else
            rclone config delete "${remote}"
            clear
            printf "%s\n" "${GREEN}Xoa remote success.${NC}"
        fi
    fi
}

if [ -f "/root/.config/rclone/rclone.conf" ]; then
    _run
else
    clear
    printf "%s\n" "${RED}Ban chua cau hinh ket noi voi Google Drive.${NC}"
fi
menu_ggdrive