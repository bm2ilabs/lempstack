# shellcheck disable=SC2154
source /var/hostvn/menu/helpers/function

set_var(){
    #https://www.howtoforge.com/tutorial/linux-grep-command/
    #https://stackoverflow.com/a/6284370
    username=$(grep -w "username" "${USER_DIR}/.${domain}.conf" | cut -f2 -d'=')
    db_name=$(grep -w "db_name" "${USER_DIR}/.${domain}.conf" | cut -f2 -d'=')
}

confirm_restore(){
    while true
    do
        read -r -p "You want to recover data? (y/n) " promt_restore
        echo
        if [[ "${promt_restore}" =~ ^([yY])$ || "${promt_restore}" =~ ^([nN])$ ]]; then
            break
        else
            printf "%s\n"  "${RED}Value is not correct. Please re-enter.${NC}"
        fi
    done
}

_restore(){
    cd_dir /home/backup/"${date}"/"${domain}"
    mysql -uadmin -p"${mysql_pwd}" "${db_name}" < "${db_name}".sql
}

_run(){
    set_var
    if if_is_wordpress "${username}" "${domain}"; then
        clear
        printf "%s\n" "${RED}This website uses WordPress, please use Wordpress Management Menu.${NC}"
        return 1
    fi

    check_backup_exists "${date}" "${domain}"

    if ! check_backup_empty "${date}" "${domain}"; then
        ALERT="${RED}This username does not have backup.${NC}\n"
    fi

    if [ ! -f "/home/backup/${date}/${domain}/${domain}.sql" ]; then
        ALERT="${RED}This username does not have backup.${NC}\n"
    fi

    if [[ -z "${ALERT}" ]]; then
        empty_db
        _restore
        clear
        printf "%s\n" "${GREEN}Restore success data.${NC}"
    else
        clear
        printf "%s\n" "${ALERT}"
    fi
}

ALERT=""
promt_restore=""
domain=""
date=""
confirm_restore
if [[ "${promt_restore}" =~ ^([yY])$ ]]; then
    list_backup
    if [ -z "${date}" ]; then
        clear
        printf "%s\n" "${RED}You have chosen to cancel the action${NC}"
    else
        if [ -z "${domain}" ]; then
            clear
            printf "%s\n" "${RED}You have chosen to cancel the action${NC}"
        else
            _run
        fi
    fi
else
    clear
    printf "%s\n" "${RED}You have chosen to cancel the data recovery.${NC}"
fi

menu_backup