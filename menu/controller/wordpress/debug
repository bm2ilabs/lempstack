# shellcheck disable=SC2154
# shellcheck disable=SC1091
source /var/hostvn/menu/helpers/function

_run(){
    domain=""
    select_domain
    if [[ -n "${domain}" ]]; then
        username=$(grep -w "username" "${USER_DIR}/.${domain}.conf" | cut -f2 -d'=');
        cd_dir /home/"${username}"/"${domain}"/public_html
        debug=$(wp config get WP_DEBUG --allow-root)
        if [[ "${debug}" == 1 ]]; then
            wp config set WP_DEBUG false --raw --allow-root
            restart_service
            clear
            printf "%s\n" "${GREEN}Disable Debug mode success.${NC}"
            echo ""
        else
            wp config set WP_DEBUG true --raw --allow-root
            restart_service
            clear
            printf "%s\n" "${GREEN}Enable Debug mode success.${NC}"
            echo ""
        fi
    else
        clear
        printf "%s\n" "${RED}You have chosen to cancel the action${NC}"
    fi
}

_run
menu_wp