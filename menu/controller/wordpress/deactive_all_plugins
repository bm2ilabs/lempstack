# shellcheck disable=SC2154
source /var/hostvn/menu/helpers/function

_run(){
    #https://www.howtoforge.com/tutorial/linux-grep-command/
    #https://stackoverflow.com/a/6284370
    username=$(grep -w "username" "${USER_DIR}/.${domain}.conf" | cut -f2 -d'=')

    if [ ! -d "/home/${username}/${domain}/public_html/wp-content/plugins" ]; then
        ALERT=$(printf "%s\n" "${RED}Website does not use WordPress${NC}")
    fi

    if [ -z "${ALERT}" ]; then
        cd_dir /home/*/"${domain}"/public_html
        wp plugin deactivate --all --allow-root
        printf "%s\n" "${GREEN}Disable all activated plugins${NC}"
        echo ""
    else
        clear
        printf "%s\n" "${ALERT}"
    fi
}

ALERT=""
domain=""
select_domain

if [ -n "${domain}" ]; then
    _run
else
    clear
    printf "%s\n" "${RED}You have chosen to cancel the action${NC}"
fi

wp_menu_plugins