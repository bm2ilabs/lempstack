# shellcheck disable=SC2154
# shellcheck disable=SC1091
source /var/hostvn/menu/helpers/function

check_expired(){
    if [[ -f "/etc/letsencrypt/live/${domain}/cert.pem" ]]; then
        clear
        openssl x509 -noout -dates -in /etc/letsencrypt/live/"${domain}"/cert.pem
    else
        clear
        printf "%s\n" "${RED}This domain name has not yet installed Let's Encrypt.${NC}"
    fi
}

_run(){
    domain=""
    select_domain

    if [ -z "${domain}" ]; then
        clear
        printf "%s\n" "${RED}You have chosen to cancel the action${NC}"
    else
        clear
        check_expired
    fi
}

_run
menu_letencrypt